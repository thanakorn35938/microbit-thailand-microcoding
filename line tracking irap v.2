let refr = 0
let r = 0
let refl = 0
let line = 0
let l = 0
let flag = 0
function starter22() {
    while (!(input.buttonIsPressed(Button.A))) {
        basic.showArrow(ArrowNames.SouthEast)
    }
    basic.showIcon(IconNames.Heart)
    refl = 2064
    refr = 2003
}
function trackline32() {
    while (flag < line) {
        l = iBIT.ReadADC(ibitReadADC.ADC0)
        r = iBIT.ReadADC(ibitReadADC.ADC2)
        if (l > refl && r > refr) {
            iBIT.Motor(ibitMotor.Forward, 50)
        } else if (l < refl && r > refr) {
            iBIT.Spin(ibitSpin.Left, 35)
        } else if (l > refl && r < refr) {
            iBIT.Spin(ibitSpin.Right, 50)
        } else if (l < refl && r < refr) {
            iBIT.Motor(ibitMotor.Forward, 50)
            basic.pause(150)
            flag += 1
        }
    }
    flag = 0
}
function turn_left2() {
    while (flag == 0) {
        l = iBIT.ReadADC(ibitReadADC.ADC0)
        if (l <= refl) {
            iBIT.MotorStop()
            flag = 1
        } else {
            iBIT.Spin(ibitSpin.Left, 35)
        }
    }
    flag = 0
}
function trackline2() {
    while (flag == 0) {
        l = iBIT.ReadADC(ibitReadADC.ADC0)
        r = iBIT.ReadADC(ibitReadADC.ADC2)
        if (l > refl && r > refr) {
            iBIT.Motor(ibitMotor.Forward, 50)
        } else if (l < refl && r > refr) {
            iBIT.Spin(ibitSpin.Left, 35)
        } else if (l > refl && r < refr) {
            iBIT.Spin(ibitSpin.Right, 50)
        } else if (l < refl && r < refr) {
            iBIT.MotorStop()
            flag = 1
        }
    }
    flag = 0
}
