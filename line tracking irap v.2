let line = 0
let refl = 0
let flag = 0
let l = 0
let r = 0
let refr = 0
function starter22() {
    while (!(input.buttonIsPressed(Button.A))) {
        basic.showArrow(ArrowNames.SouthEast)
    }
    basic.showIcon(IconNames.Heart)
    refl = 2045
    refr = 2282
}
function turn_left2() {
    while (flag == 0) {
        l = iBIT.ReadADC(ibitReadADC.ADC0)
        if (l <= refl) {
            iBIT.MotorStop()
            flag = 1
        } else {
            iBIT.Spin(ibitSpin.Left, 35)
        }
    }
    flag = 0
}
function trackline2() {
    while (flag < line) {
        l = iBIT.ReadADC(ibitReadADC.ADC4)
        r = iBIT.ReadADC(ibitReadADC.ADC6)
        if (l > refl && r > refr) {
            iBIT.Motor(ibitMotor.Forward, 50)
        } else if (l < refl && r > refr) {
            iBIT.Spin(ibitSpin.Left, 35)
        } else if (l > refl && r < refr) {
            iBIT.Spin(ibitSpin.Right, 50)
        } else if (l < refl && r < refr) {
            iBIT.Motor(ibitMotor.Forward, 50)
            basic.pause(200)
            flag += 1
        }
    }
    flag = 0
}
function turn_right2() {
    while (flag == 0) {
        r = iBIT.ReadADC(ibitReadADC.ADC0)
        if (r <= refr) {
            iBIT.MotorStop()
            flag = 1
        } else {
            iBIT.Spin(ibitSpin.Right, 35)
        }
    }
    flag = 0
}
refr = 2282
r = iBIT.ReadADC(ibitReadADC.ADC6)
refl = 2045
l = iBIT.ReadADC(ibitReadADC.ADC4)
flag = 0
starter22()
line = 4
trackline2()
